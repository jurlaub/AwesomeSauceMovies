<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/movie_detail_title"
        android:text="@string/detail_image_default_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_detail_poster"
        android:contentDescription="@string/detail_image_default_text"
        android:layout_below="@id/movie_detail_title"
        android:layout_alignParentLeft="true"
        android:minHeight="80dp"
        android:minWidth="80dp"
        android:layout_margin="25dp" />

    <TextView
        android:id="@+id/movie_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:layout_toRightOf="@id/movie_detail_poster"
        android:layout_below="@id/movie_detail_title"
        />
    <TextView
        android:id="@+id/movie_average_vote"
        android:text="222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_popularity"
        android:layout_toRightOf="@id/movie_detail_poster"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_detail_overview"
        android:layout_below="@id/movie_detail_poster"
        android:text="@string/TMDb_notice"
        android:layout_marginTop="20dp" />

</RelativeLayout>
